<div class="navbar navbar-fixed-top">   
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        {{#brandname}}<a class="brand" href="{{basedir}}{{url}}">{{brandname}}</a>{{/brandname}}
        <div class="nav-collapse">
          {{#sections}}
          
              {{#type.navlist}}
              <ul class="nav {{pull}}">
                {{#list_items}}
                    <li class="{{#active}}active{{/active}}">
                        {{#url}}<a href="{{basedir}}{{url}}">{{/url}}{{& name}}{{#url}}</a>{{/url}} 
                    </li>
                {{/list_items}}
              </ul>
              {{/type.navlist}}
              
              {{#type.search}}
              <form class="navbar-search {{pull}}" {{#action}}action="{{basedir}}{{action}}"{{/action}}>
                <input type="text" class="search-query span2" placeholder="Search">
              </form>
              {{/type.search}}
              
              {{#type.text}}
              <p class="{{pull}}">{{& content}}</p>
              {{/type.text}}
              
            {{/sections}}
        </div><!-- /.nav-collapse -->
      </div>
    </div>
</div>		